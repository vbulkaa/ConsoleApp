@model FlightManagement.DTO.Flights.FlightsForUpdateDto;
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/userStyle.css" />
</head>
<body>
<h1>Редактировать рейс</h1>

    <form asp-action="Edit" method="post" class="formsort">
    <input type="hidden" asp-for="FlightID" />
    <div>
        <label>Номер рейса:</label>
        <input asp-for="FlightNumber" />
        <span asp-validation-for="FlightNumber"></span>
    </div>
    <div>
        <label>Тип самолета:</label>
        <select asp-for="AircraftType" asp-items="ViewBag.AircraftTypes"></select>
    </div>
    <div>
        <label>Цена билета:</label>
        <input asp-for="TicketPrice" />
        <span asp-validation-for="TicketPrice"></span>
    </div>
    <button type="submit">Сохранить</button>
</form>
</body>
</html>

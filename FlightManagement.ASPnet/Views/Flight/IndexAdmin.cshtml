@model IEnumerable<FlightManagement.models.Flights>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h1>Управление рейсами</h1>

    <a asp-action="Create" class="btn btn-outline-primary me-2">Добавить рейс</a>

    <table>
        <thead>
            <tr>
                <th>Номер рейса</th>
                <th>Тип самолета</th>
                <th>Цена билета</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.AircraftType</td>
                    <td>@flight.TicketPrice</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@flight.FlightID">Редактировать</a>
                        <form asp-action="Delete" asp-route-flightID="@flight.FlightID" method="post" style="display:inline;">
                            <button type="submit" >Удалить</button>
                        </form>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        @if (ViewData["TotalPages"] != null && ViewData["CurrentPage"] != null)
        {
            int totalPages = (int)ViewData["TotalPages"];
            int currentPage = (int)ViewData["CurrentPage"];

            for (int i = 1; i <= totalPages; i++)
            {
                <a href="?page=@i"
                   class="@(i == currentPage ? "current" : "")">
                    @(i == currentPage ? $"{i}" : i.ToString())
                </a>
                @if (i < totalPages)
                {
                    @: |
                }
            }
        }
    </div>
</body>
</html>

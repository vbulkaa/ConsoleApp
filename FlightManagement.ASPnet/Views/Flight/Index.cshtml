@model IEnumerable<FlightManagement.models.Flights>

@{
    ViewData["Title"] = "Список рейсов";
}

<h1>Список рейсов</h1>
<table class="table">
    <thead>
        <tr>
            <th>Номер рейса</th>
            <th>Тип самолета</th>
            <th>Цена билета</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.FlightNumber</td>
                <td>@flight.AircraftType</td>
                <td>@flight.TicketPrice</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@flight.FlightID">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@flight.FlightID">Удалить</a> |
                    <a asp-action="ManageRoutes" asp-route-flightId="@flight.FlightID">Управление маршрутами</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Добавить новый рейс</a>